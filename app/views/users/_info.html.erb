<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>

  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>

  <tr>
    <th>follows</th>
    <th><%= link_to user.following.count, following_user_path(user) %></th>
  </tr>

  <tr>
    <th>followers</th>
    <th>
      <%= link_to user.follower.count, follower_user_path(user) %>
    </th>
  </tr>
</table>

<% if user.name != "guestuser" %>



<div class='row'>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <% if user.is_followed_by?(current_user) %>
      <%= link_to user_relationships_path(user), method: :delete, class: 'btn btn-info' do %>
      フォロー外す
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(user), method: :post, class: 'btn btn-success' do %>
      フォローする
      <% end %>
    <% end %>
    <!--DM機能実装-->
<% if (current_user.is_followed_by? @user) && (@user.is_followed_by? current_user) %>
  <%= link_to 'chatを始める', chat_path(@user.id), class: "ml-3" %>
<% end %>
  <% end %>

</div>
<% end %>
